@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "ListOfMembers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<a class="btn btn-primary" asp-controller="Admin" asp-action="CreateNewRole">
         Add new role
     </a>
@if(Model.Any())
{
    foreach(var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the buttom below to create a role
            </h5>
            <a style="width:auto" asp-controller="Admin" asp-action="CreateNewRole">
         Create Role
     </a>
        </div>
    </div> 
}